<div id="post_content">
  <h1 class="title">
    Title: <%= @post.title %>
  </h1>
  <hr>
  <p class="body">Body text:<br>
    <%= @post.body %>
  </p>

  <hr>
  <p class="date">
    Post was submitted <%= time_ago_in_words(@post.created_at) %> ago
    | <%= link_to 'Edit', edit_post_path(@post) %>
    | <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: "Are you sure?" } %>
  </p>
</div>